<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/users</property>
        <property name="hibernate.connection.username">mark</property>
        <property name="hibernate.connection.password">mark</property>

        <mapping class="crud.entity.Projects" />
        <mapping class="crud.entity.Workers" />
        <mapping class="crud.entity.Positions" />
    </session-factory>
</hibernate-configuration>